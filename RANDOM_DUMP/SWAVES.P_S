  { end;}

{    for loop1:=0 to 127 do BEGIN
      bob[loop1].r:=0;{63-loop1 div 4;}
{      bob[loop1].g:=loop1 div 2;{loop1 div 5;}
{      bob[loop1].b:=loop1 div 2;
    END;
      bob[128].r:=0;{63-loop1 div 4;}
{      bob[128].g:=63;{loop1 div 5;}
{      bob[128].b:=0;
    for loop1:=129 to 255 do BEGIN
      bob[loop1].r:=0;
      bob[loop1].g:=63-loop1 div 2;
      bob[loop1].b:=63-loop1 div 2;
    END;}

    { Set up a nice looking pallette ... we alter color 0, so the border will
