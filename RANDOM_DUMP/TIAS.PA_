    inc(x,cometspeed);
    fire(bseg);
    ScaleUp(bseg,bseg2);
    CopyDW(bseg2,$0a000);

  {Starburst....}
    for i:=1 to gordan do dot(random(chad),random(chad2),bseg2,90);
    fire(bseg2);
    ScaleUp(bseg2,bseg);
    CopyDW(bseg,$0a000);
end;

