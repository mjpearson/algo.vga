         colorval:= colorval - 1;
      if colorval < 128 then colorval :=128;
         cometspeed := cometspeed - 1;
      if cometspeed < 1 then cometspeed := 1;
      if q < 7 then flag :=0;
    end;
   if flag=0 then
     begin
          gordan:=gordan+1;
       if gordan>255 then gordan:=255;
          colorval:= colorval + 1;
       if colorval > 132 then colorval :=132;
